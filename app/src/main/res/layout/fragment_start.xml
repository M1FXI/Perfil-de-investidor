<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StartFragment">

    <data>
        <variable
            name="StartFragment"
            type="com.example.perfildeinvestidor.StartFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="411dp"
                android:layout_height="131dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:contentDescription="Titulo: Análise de perfil de investidor"
                android:text="Análise de perfil de investidor"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline4"
                android:textColor="@color/material_on_background_emphasis_medium"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="399dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:contentDescription="Este aplicativo serve para avaliar seu perfil de investidor seguindo um questionário feito pelo Banco Paulista."
                android:text="Este aplicativo serve para avaliar seu perfil de investidor seguindo um questionário feito pelo Banco Paulista."
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline4"
                android:textColor="@color/material_on_background_emphasis_medium"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Crédito ao Grupo Paulista: "
                android:text="Crédito ao Grupo Paulista: "
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline4"
                android:textColor="@color/material_on_background_emphasis_medium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:contentDescription="https://www.bancopaulista.com.br/Arquivos/QuestionarioAPI.pdf"
                android:text="https://www.bancopaulista.com.br/Arquivos/QuestionarioAPI.pdf"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline4"
                android:textColor="@color/material_on_background_emphasis_medium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Digite seu nome abaixo"
                android:text="Digite seu nome:"
                android:textAlignment="gravity"
                android:textAppearance="?attr/textAppearanceHeadline4"
                android:textColor="@color/material_on_background_emphasis_medium"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:ems="20"
                android:fontFamily="sans-serif-medium"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textColorHint="#B7000000"
                android:textSize="34sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/next_button"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:contentDescription="Botão continuar"
                android:minWidth="250dp"
                android:onClick="@{() -> StartFragment.initSurvey()}"
                android:text="Continuar"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</layout>